{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$ref": "#/definitions/stages",
  "definitions": {
    "stages": {
      "type": "array",
      "minItems": 1,
      "items": {
        "if": {
          "type": "array"
        },
        "then": {
          "$ref": "#/definitions/stages"
        },
        "else": {
          "$ref": "#/definitions/stage"
        }
      }
    },
    "stage": {
      "type": "object",
      "additionalProperties": false,
      "oneOf": [
        {
          "required": ["off"]
        },
        {
          "required": ["use"]
        }
      ],
      "properties": {
        "continueOnError": {
          "type": "boolean"
        },
        "name": {
          "type": "string",
          "minLength": 1
        },
        "off": {
          "type": "string",
          "minLength": 1
        },
        "params": {
          "type": "object",
          "minProperties": 1
        },
        "retryCount": {
          "type": "number",
          "minimum": 1
        },
        "retryWait": {
          "type": "number",
          "minimum": 0
        },
        "use": {
          "type": "string",
          "minLength": 1
        },
        "verbose": {
          "type": "boolean"
        }
      }
    }
  }
}
