{
  "name": "finch",
  "private": true,
  "engines": {
    "node": ">=10.19.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "license": "MPL-2.0",
  "devDependencies": {
    "@commitlint/cli": "8.3.5",
    "@commitlint/config-conventional": "8.3.4",
    "@commitlint/config-lerna-scopes": "8.3.4",
    "acorn": "7.1.1",
    "babel-eslint": "10.1.0",
    "commitlint": "8.3.5",
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.10.1",
    "eslint-plugin-import": "2.20.2",
    "eslint-plugin-prettier": "3.1.2",
    "fs-extra": "9.0.0",
    "husky": "4.2.3",
    "inquirer": "7.1.0",
    "jest": "25.2.6",
    "lerna": "3.20.2",
    "nodemon": "2.0.2",
    "parse-package-name": "0.1.0",
    "prettier": "2.0.2",
    "validate-npm-package-name": "3.0.0"
  },
  "scripts": {
    "all": "yarn lerna exec yarn",
    "cli": "./packages/cli/index.js",
    "dev": "nodemon --ext js --watch \"packages/**\"",
    "dev:debug": "nodemon --inspect-brk --ext js --watch \"packages/**\"",
    "format": "yarn prettier \"**/*.{js,json,md,yaml}\" --write",
    "lint": "yarn lint:js",
    "lint:js": "eslint \"**/*.js\"",
    "new": "node scripts/create-cli",
    "pre-commit": ".git/hooks/pre-commit",
    "test": "jest",
    "test:debug": "jest --clearCache && npx -n '--inspect-brk' jest --runInBand --no-cache"
  }
}
