{
  "name": "finch",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "license": "MPL-2.0",
  "devDependencies": {
    "@commitlint/cli": "7.6.1",
    "@commitlint/config-conventional": "7.5.0",
    "@commitlint/config-lerna-scopes": "7.6.0",
    "acorn": "6.1.1",
    "babel-eslint": "10.0.1",
    "commitlint": "7.6.1",
    "eslint": "5.16.0",
    "eslint-config-prettier": "4.2.0",
    "eslint-plugin-import": "2.17.2",
    "eslint-plugin-prettier": "3.0.1",
    "execa": "1.0.0",
    "fs-extra": "7.0.1",
    "husky": "2.1.0",
    "inquirer": "6.3.1",
    "jest": "24.7.1",
    "lerna": "3.13.4",
    "lint-staged": "8.1.5",
    "nodemon": "1.18.11",
    "parse-package-name": "0.1.0",
    "prettier": "1.17.0",
    "validate-npm-package-name": "3.0.0"
  },
  "scripts": {
    "all": "yarn lerna exec yarn",
    "dev": "nodemon --ext js --watch \"packages/**\"",
    "dev:debug": "nodemon --inspect-brk --ext js --watch \"packages/**\"",
    "lint": "yarn lint:js",
    "lint:js": "eslint \"**/*.js\"",
    "new": "node scripts/create-cli",
    "publish": "lerna publish",
    "test": "jest",
    "test:debug": "jest --clearCache && npx -n '--inspect-brk' jest --runInBand --no-cache"
  }
}
