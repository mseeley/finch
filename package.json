{
  "name": "finch",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "license": "MPL-2.0",
  "devDependencies": {
    "@commitlint/cli": "8.2.0",
    "@commitlint/config-conventional": "8.2.0",
    "@commitlint/config-lerna-scopes": "8.2.0",
    "acorn": "7.1.0",
    "babel-eslint": "10.0.3",
    "commitlint": "8.2.0",
    "eslint": "6.7.2",
    "eslint-config-prettier": "6.7.0",
    "eslint-plugin-import": "2.18.2",
    "eslint-plugin-prettier": "3.1.2",
    "fs-extra": "8.1.0",
    "husky": "3.1.0",
    "inquirer": "7.0.0",
    "jest": "24.9.0",
    "lerna": "3.19.0",
    "lint-staged": "9.5.0",
    "nodemon": "2.0.2",
    "parse-package-name": "0.1.0",
    "prettier": "1.19.1",
    "validate-npm-package-name": "3.0.0"
  },
  "scripts": {
    "all": "yarn lerna exec yarn",
    "dev": "nodemon --ext js --watch \"packages/**\"",
    "dev:debug": "nodemon --inspect-brk --ext js --watch \"packages/**\"",
    "lint": "yarn lint:js",
    "lint:js": "eslint \"**/*.js\"",
    "new": "node scripts/create-cli",
    "publish": "lerna publish",
    "test": "jest",
    "test:debug": "jest --clearCache && npx -n '--inspect-brk' jest --runInBand --no-cache"
  }
}
